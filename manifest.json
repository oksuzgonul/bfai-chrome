{
  "manifest_version": 3,
  "name": "Blueflame AI Chat Data Capture",
  "version": "1.0",
  "description": "Captures and displays ChatThread data from Blueflame AI chat pages",
  "permissions": [
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://app.blueflame.ai/*",
    "https://api.blueflame.ai/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://app.blueflame.ai/dashboard/chat/details/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://app.blueflame.ai/*"]
    }
  ]
}

